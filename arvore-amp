  <script>
    let currentQuestion = 0;

    // As "perguntas" n√£o s√£o sempre 6 (h√° ramos), por isso usamos um valor aproximado
    // para dar uma sensa√ß√£o de progresso sem ser demasiado "exame".
    const totalQuestionsApprox = 6;

    window.onload = function () {
      nextQuestion("q1");
    };

    function nextQuestion(questionId) {
      const allQuestions = document.querySelectorAll(".question-container");
      allQuestions.forEach(q => q.classList.remove("active"));

      const allResults = document.querySelectorAll(".result");
      allResults.forEach(r => r.classList.remove("active"));

      const nextQ = document.getElementById(questionId);
      if (nextQ) {
        nextQ.classList.add("active");
        currentQuestion++;
        updateProgress();
      }
    }

    function goToResult(level, reason = "") {
      const allQuestions = document.querySelectorAll(".question-container");
      allQuestions.forEach(q => q.classList.remove("active"));

      const allResults = document.querySelectorAll(".result");
      allResults.forEach(r => r.classList.remove("active"));

      const result = document.getElementById("result-" + level);
      if (result) {
        result.classList.add("active");

        if (level === "incompatible") {
          const el = document.getElementById("incompatible-reason");
          if (reason) {
            el.innerHTML = `<strong>Atividade determinante:</strong> ${reason}.`;
          } else {
            el.innerHTML = "";
          }
        }

        updateProgress(100);
      }
    }

    function updateProgress(percentage) {
      const progressBar = document.getElementById("progressBar");
      if (typeof percentage === "number") {
        progressBar.style.width = percentage + "%";
        return;
      }
      const progress = (currentQuestion / totalQuestionsApprox) * 100;
      progressBar.style.width = Math.min(progress, 95) + "%";
    }

    function restartQuiz() {
      const allResults = document.querySelectorAll(".result");
      allResults.forEach(r => r.classList.remove("active"));

      const allQuestions = document.querySelectorAll(".question-container");
      allQuestions.forEach(q => q.classList.remove("active"));

      currentQuestion = 0;
      updateProgress(0);
      nextQuestion("q1");
    }
  </script>
</body>
