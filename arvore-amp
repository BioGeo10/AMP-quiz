  <script>
    let currentStep = 0;
    const totalStepsApprox = 6; // Mantemos "aproximado" (caminhos variam)

    function startQuiz() {
      document.getElementById('intro').classList.remove('active');
      currentStep = 0;
      updateProgress(0);
      nextQuestion('q1');
    }

    function nextQuestion(questionId) {
      // Esconder perguntas e resultados
      document.querySelectorAll('.question-container').forEach(q => q.classList.remove('active'));
      document.querySelectorAll('.result').forEach(r => r.classList.remove('active'));

      // Mostrar a próxima pergunta
      const nextQ = document.getElementById(questionId);
      if (nextQ) {
        nextQ.classList.add('active');
        currentStep++;
        updateProgress(); // sem argumento = cálculo aproximado
      }
    }

    function goToResult(level, reason = '') {
      // Esconder perguntas
      document.querySelectorAll('.question-container').forEach(q => q.classList.remove('active'));
      // Esconder resultados
      document.querySelectorAll('.result').forEach(r => r.classList.remove('active'));

      const result = document.getElementById('result-' + level);
      if (result) {
        result.classList.add('active');

        if (level === 'incompatible') {
          const el = document.getElementById('incompatible-reason');
          if (reason) {
            el.innerHTML = `<p><strong>Fator determinante:</strong> ${reason}.</p>`;
          } else {
            el.innerHTML = '';
          }
        }

        updateProgress(100);
      }
    }

    // FIX: 0 deve funcionar; por isso testamos undefined
    function updateProgress(percentage) {
      const progressBar = document.getElementById('progressBar');

      if (percentage !== undefined) {
        progressBar.style.width = percentage + '%';
        return;
      }

      const progress = (currentStep / totalStepsApprox) * 100;
      progressBar.style.width = Math.min(progress, 95) + '%';
    }

    function restartQuiz() {
      document.querySelectorAll('.result').forEach(r => r.classList.remove('active'));
      document.querySelectorAll('.question-container').forEach(q => q.classList.remove('active'));

      document.getElementById('intro').classList.add('active');
      currentStep = 0;
      updateProgress(0);
    }
  </script>
</body>
</html>
